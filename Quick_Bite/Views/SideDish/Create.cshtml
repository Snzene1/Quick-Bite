@model Quick_Bite.Models.SideDish

@{
    ViewData["Title"] = "Create New Side Dish";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 fw-bold" style="color: var(--eggplant);">
            <i class="fas fa-plate-wheat me-2"></i>Create New Side Dish
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to List
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                <div class="row g-3">
                    <!-- Side Dish Name -->
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input asp-for="RecipeName" class="form-control" placeholder="Side dish name" />
                            <label asp-for="RecipeName" class="control-label"></label>
                            <span asp-validation-for="RecipeName" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Side Dish Category -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="SideDishCategory" class="form-select" asp-items="Html.GetEnumSelectList<SideDish.SideDishType>()">
                                <option value="">Select side dish type</option>
                            </select>
                            <label asp-for="SideDishCategory" class="control-label"></label>
                            <span asp-validation-for="SideDishCategory" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Pairings -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Pairings" class="form-control" placeholder="Main dish pairings" />
                            <label asp-for="Pairings" class="control-label"></label>
                            <span asp-validation-for="Pairings" class="text-danger small"></span>
                            <small class="form-text text-muted">What main dishes does this pair well with?</small>
                        </div>
                    </div>

                    <!-- Times and Servings -->
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input asp-for="PrepTime" class="form-control" placeholder="Prep time (minutes)" type="number" min="1" />
                            <label asp-for="PrepTime" class="control-label"></label>
                            <span asp-validation-for="PrepTime" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating">
                            <input asp-for="CookTime" class="form-control" placeholder="Cook time (minutes)" type="number" min="1" />
                            <label asp-for="CookTime" class="control-label"></label>
                            <span asp-validation-for="CookTime" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating">
                            <input asp-for="Servings" class="form-control" placeholder="Servings" type="number" min="1" />
                            <label asp-for="Servings" class="control-label"></label>
                            <span asp-validation-for="Servings" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Ingredients -->
                    <div class="col-md-12">
                        <div class="form-floating">
                            <textarea asp-for="Ingredients" class="form-control" placeholder="Ingredients"
                                      style="height: 150px;"></textarea>
                            <label asp-for="Ingredients" class="control-label"></label>
                            <span asp-validation-for="Ingredients" class="text-danger small"></span>
                            <small class="form-text text-muted">Enter each ingredient on a new line</small>
                        </div>
                    </div>

                    <!-- Instructions -->
                    <div class="col-md-12">
                        <div class="form-floating">
                            <textarea asp-for="Instructions" class="form-control" placeholder="Instructions"
                                      style="height: 200px;"></textarea>
                            <label asp-for="Instructions" class="control-label"></label>
                            <span asp-validation-for="Instructions" class="text-danger small"></span>
                            <small class="form-text text-muted">Enter each step on a new line</small>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="col-md-12 mt-3">
                        <button type="submit" class="btn btn-primary btn-lg w-100 py-3">
                            <i class="fas fa-plus-circle me-2"></i>Create Side Dish
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .form-floating {
            margin-bottom: 1rem;
        }

        .form-floating textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .form-control, .form-select {
            border: 1px solid var(--olive);
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--tomato);
            box-shadow: 0 0 0 0.25rem rgba(255, 99, 71, 0.25);
        }

        .alert-danger {
            background-color: rgba(255, 99, 71, 0.1);
            border-color: var(--tomato);
            color: var(--tomato);
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Initialize floating labels
        $(document).ready(function() {
            $('.form-floating input, .form-floating textarea, .form-floating select').on('input change', function() {
                if ($(this).val()) {
                    $(this).addClass('has-value');
                } else {
                    $(this).removeClass('has-value');
                }
            }).trigger('change');
        });
    </script>
}