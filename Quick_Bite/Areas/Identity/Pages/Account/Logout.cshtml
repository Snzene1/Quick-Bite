@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="logout-container">
    <div class="logout-card">
        <div class="logout-brand">
            <img src="~/images/quickbite-logo.png" alt="QuickBite Logo" class="logo">
            <h1>@ViewData["Title"]</h1>
        </div>

        <div class="logout-content">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <div class="logout-confirm">
                    <i class="fas fa-question-circle fa-3x mb-4 text-primary"></i>
                    <h3>Are you sure you want to log out?</h3>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-primary btn-lg mt-3">
                            <i class="fas fa-sign-out-alt me-2"></i> Yes, Log Me Out
                        </button>
                    </form>
                    <a href="/" class="btn btn-outline-secondary mt-2">
                        <i class="fas fa-arrow-left me-2"></i> No, Take Me Back
                    </a>
                </div>
            }
            else
            {
                <div class="logout-success">
                    <i class="fas fa-check-circle fa-3x mb-4 text-success"></i>
                    <h3>You have successfully logged out</h3>
                    <p class="text-muted">Thank you for using QuickBite</p>
                    <a href="/" class="btn btn-primary mt-3">
                        <i class="fas fa-home me-2"></i> Return to Home
                    </a>
                    <a asp-page="/Account/Login" class="btn btn-outline-primary mt-2">
                        <i class="fas fa-sign-in-alt me-2"></i> Sign In Again
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .logout-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            padding: 2rem;
        }

        .logout-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 500px;
            width: 100%;
            text-align: center;
        }

        .logout-brand {
            padding: 2rem;
            background: linear-gradient(135deg, var(--basil), var(--olive));
            color: white;
        }

        .logout-brand h1 {
            margin-top: 1rem;
            font-weight: 600;
        }

        .logo {
            height: 80px;
            width: auto;
        }

        .logout-content {
            padding: 3rem 2rem;
        }

        .logout-confirm, .logout-success {
            padding: 1rem;
        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }

        /* Use your existing color variables */
        .text-primary {
            color: var(--tomato) !important;
        }

        .btn-primary {
            background-color: var(--tomato);
            border-color: var(--tomato);
        }

        .btn-primary:hover {
            background-color: #e5533d;
            border-color: #e5533d;
        }
    </style>
}